<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    android:padding="24dp">

    <ImageView
        android:id="@+id/imgPublicProfilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_person"
        android:background="#E0E0E0"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:contentDescription="Profile Picture"/>

    <TextView
        android:id="@+id/tvPublicDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#1976D2"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvPublicBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textColor="#333333"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvPublicContactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Info"
        android:textColor="#333333"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvPublicRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 0.0"
        android:textColor="#e68304"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvPublicTotalTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Transactions: 0"
        android:textColor="#888888"
        android:layout_marginTop="4dp"/>

</LinearLayout>

